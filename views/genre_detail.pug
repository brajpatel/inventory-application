extends layout

block content
  div(class="p-4 main-container")
    h1 #{title}
    hr
    ul(class="d-flex flex-wrap game-list")
      each game, index in genre_games
        li(class="text-center cascade-fade-in game-card" style=`--delay:${index + 1}`)
          a(href=game.url) 
            img(src=(game.image==='' ? '/images/default-image.jpg' : game.image) alt="game image")
            div(class="p-2")
              p #[strong #{game.name}]

      else
        li This genre has no games.

    a(href=genre.url + '/delete' class="py-2 action-btn") Delete Genre