extends layout

block content
  div(class="p-4 main-container")
    div(class="mt-3 game-detail")
      div
        img(src=`/images/${game.image}` alt="game image")
      div(class="text-center px-4 py-3 game-info")
        p(class="game-title capitalise") #[strong #{title}]
        p #{game.description}
        p #[strong Price: ]
          if game.price > 0
            span Â£#{game.price}
          else
            span Free
        p #[strong Number in stock: ]
          if game.number_in_stock > 0
            span #{game.number_in_stock}
          else
            span Sold out
        p #[strong Initial release date:] #{game.release_date_formatted}
        p #[strong Developer:] #[a(href=game.developer.url) #{game.developer.name}]
        p #[strong Genres: ]
          if game.genre.length
            each genre in game.genre
              a(href=genre.url class="mr-2") #{genre.name}
          else
            span None
        p #[strong Platforms: ]
          if game.platform.length
            each platform in game.platform
              a(href=platform.url class="mr-2") #{platform.name}
          else
            span None
        a(href=game.url + '/delete' class="align-self-center action-btn") Delete Game