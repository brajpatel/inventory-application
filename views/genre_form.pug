extends layout

block content
  div(class="p-4 main-container")
    h1 #{title}
    hr
    form(action="" method="POST")
      div(class="form-group")
        label(for="name")
        input(class="form-control" id="name" name="name" placeholder="Shooter, Racing, Party etc." value=(genre===undefined ? '' : genre.name) type="text")
        button(class="btn submit-btn" type="submit") Submit

    if errors
      ul
        for error in errors
          li != error.msg