extends layout

block content
  div(class="p-4 main-container")
    if platform_games.length
      h1 #{title}
      hr
      p(class="mb-3") #[strong Delete the following games before attempting to delete this platform:]
      ul(class="d-flex flex-wrap game-list")
        each game, index in platform_games
          li(class="text-center cascade-fade-in game-card" style=`--delay:${index + 1}`)
            a(href=game.url) 
              img(src=(game.image==='' ? '/images/default-image.jpg' : `/images/${game.image}`) alt="game image")
              div(class="p-2")
                p #[strong #{game.name}]

    else
      h1 Delete #{title}
      hr
      p(class="mb-3") #[strong Do you really want to delete this platform?]
      form(action="" method="POST")
        input(class="form-input mb-3" id="platformid" name="platformid" value=platform._id type="hidden")
        button(class="action-btn" type="submit") Delete